{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "@types/node", "@types/jest"],
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@packages": ["packages/"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "__tests__/**/*.d.ts"
  ]
//  "include": ["packages/**/*.ts", "packages/**/*.d.ts"]
}
