{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "@types/node", "@types/jest"],
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@packages": ["packages/"],
      "@components": ["src/components/"]
    }
  },
 "include": ["packages/**/*.ts", "packages/**/*.d.ts"]
}
